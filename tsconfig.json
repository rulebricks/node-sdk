{
    "compilerOptions": {
        "extendedDiagnostics": true,
        "strict": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "lib": ["ES2020"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
